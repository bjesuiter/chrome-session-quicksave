{
	"name": "chrome-session-quicksave",
	"description": "A Chrome extension for quickly saving all open tabs inside a window into the browser bookmarks (with some configurability)",
	"version": "0.3.0",
	"private": true,
	"scripts": {
		"start": "snowpack dev",
		"build": "snowpack build",
		"build:clean": "snowpack build --clean",
		"build:watch": "chokidar \"projects/**/*\"  \"webroot/**/*\" -c \"npm run build\"",
		"postbuild": "run-s add-version-to-manifest echo:finished",
		"echo:finished": "echo 'Build finished!'",
		"generate-dist-zip": "run-s build:clean zip:dist",
		"add-version-to-manifest": "node -r esm dev-scripts/add-version-to-manifest.js",
		"zip:dist": "bestzip deploy.zip dist/*"
	},
	"dependencies": {
		"@bjesuiter/serializr-helpers": "^2.2.1",
		"@datorama/akita": "^5.3.0",
		"@material-ui/core": "^4.11.2",
		"@material-ui/icons": "^4.11.2",
		"@material-ui/lab": "^4.0.0-alpha.57",
		"date-fns": "^2.16.1",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"serializr": "^2.0.5"
	},
	"devDependencies": {
		"@snowpack/plugin-react-refresh": "^2.3.9",
		"@snowpack/plugin-typescript": "^1.1.1",
		"@types/chrome": "0.0.127",
		"@types/jest": "^26.0.19",
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.0",
		"@types/snowpack-env": "^2.3.3",
		"bestzip": "^2.1.7",
		"chokidar-cli": "^2.1.0",
		"esm": "^3.2.25",
		"jest": "^26.6.3",
		"load-json-file": "^6.2.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.2.1",
		"snowpack": "^2.18.5",
		"tslib": "^1.14.1",
		"typescript": "^4.1.3",
		"write-json-file": "^4.3.0"
	},
	"license": "MIT"
}
