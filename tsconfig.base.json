{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "baseUrl": "./",
    "paths": {
      "@lib/*": [
        "src/lib/*"
      ],
      "@models/*": [
        "src/models/*"
      ]
    },
    "outDir": "www"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
